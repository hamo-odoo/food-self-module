<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="food_order_tree_view" model="ir.ui.view">
        <field name="name">food.order.tree</field>
        <field name="model">food.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="create_date"/>
                <field name="resturant_id"/>
                <field name="customer_id"/>
                <field name="delivery_partner_id"/>
                <field name="total_price"/>
            </tree>
        </field>
    </record>
    <record id="food_order_form_view" model="ir.ui.view">
        <field name="name">food.order.form</field>
        <field name="model">food.order</field>
        <field name="arch" type="xml">
            <form name="food_order_form">
                <header>
                    <field widget="statusbar" name="state" />
                    <button name="action_state_accepted" states="new" type="object">Accept</button>
                    <button name="action_state_canceled" states="new,accepted,dp_assigned" type="object">Canceled</button>
                  </header>
                <sheet>
                    <group>
                        <group><field name="id"/></group>
                        <group><field name="customer_id"/></group>
                        <group><field name="resturant_id"/></group>
                        <group><field name="delivery_partner_id" attrs="{'readonly':[('state','not in',('accepted','dp_assigned'))],}"/></group>
                        <notebook>
                            <page name="order_line" string="Order Line">
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="item_id"/>
                                        <field name="resturant_id" invisible="True"/>
                                        <field name="price"/>
                                        <field name="qty"/>
                                        <field name="net_price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <h2><group><field name="total_price"/></group></h2>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="food_order_view" model="ir.actions.act_window">
        <field name="name">Food Order</field>
        <field name="res_model">food.order</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create order
            </p>
            <p>To enjoy tasty food</p>
        </field>
    </record>
</odoo>
