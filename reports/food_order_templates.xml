<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="food_order_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="order">
                    <h2>Order Id-<span t-field="order.id"/></h2>
                    <div>
                        <strong>Customer Name:</strong>
                        <span t-field="order.customer_id.name"/>
                    </div>
                    <div>
                        <strong>Delivery Address:</strong>
                        <p><span t-field="order.customer_id.street"/><span t-field="order.customer_id.street2"/><span t-field="order.customer_id.city"/></p>
                    </div>
                    <div>
                        <strong>Resturant Name:</strong>
                        <span t-field="order.resturant_id.name"/>
                    </div>
                    <table class="table">
                    <thead>
                        <tr>
                            <th>Item Name</th>
                            <th>Qty</th>
                            <th>Price per qty</th>
                            <th>Total</th>
                        </tr>
                    </thead> 
                    <tbody>
                        <t t-set="orderlines" t-value="order.mapped('order_line_ids')"/>
                        <tr t-foreach="orderlines" t-as="orderline">
                                <td><span t-field="orderline.item_id.name"/></td>
                                <td><span t-field="orderline.qty"/></td>
                                <td><span t-field="orderline.price"/></td>
                                <td><span t-field="orderline.net_price"/></td>
                        </tr>
                        <tr>
                            <td colspan="4"><strong>Total Price-</strong><span t-field="order.total_price"/></td>
                        </tr>
                    </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>
